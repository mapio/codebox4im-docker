#!/usr/bin/python

from os import environ
from urllib2 import urlopen, URLError
from sys import exit
from webbrowser import open as wopen

if not 'ARBITER_ADDRESS' in environ:
	exit( 'Please set ARBITER_ADDRESS in the environment' )

ARBITER_URL = 'http://{}/'.format( environ[ 'ARBITER_ADDRESS' ] )

try:
	uid_signature = urlopen( ARBITER_URL ).read()
except URLError:
	exit( 'The arbiter is not responding' )

wopen( ARBITER_URL + uid_signature, 1 )
