#!/bin/bash

user_key=$1

if [ -z $user_key ]; then
	echoerr "Must specify user:key"
	exit 1
fi

user=${user_key%%:*}
key=${user_key##*:}

echoerr() {
	echo "$@" 1>&2
}

exiterr() {
	exit 1
}

if [[ $(type -t boot2docker) == file ]]; then
	ip=$(boot2docker ip)
else
	ip=$(hostname)
fi

mkdir -p ./var/data
base_dir=$(realpath ./var/data)
user_dir="${base_dir}/${user}"

if [[ ! -d "$user_dir" ]]; then
	mkdir -p "${user_dir}/workspace"
fi

docker_id="${user_dir}/docker_id.txt"
if [[ -r "$docker_id" ]]; then
	did=$(cat "$docker_id")
	echoerr -n "Found previous run id '$did'..."
	running=$(docker inspect -f '{{ .State.Running }}' $did 2>/dev/null)
	if [[ $running == "true" ]]; then
		echoerr " instance alive!"
	else
		echoerr " instance not running! Cleaning up id..."
		did=''
		rm -f "$docker_id"
	fi
else
	did=''
fi

if [[ -z "$did" ]]; then
	did=$(docker run --name "cb_${user}" -d -P -v "${user_dir}/workspace":/home/esame/workspace mapio/codebox4im-docker run --users "$user_key" /home/esame/workspace && sleep 1)
	echo $did > "$docker_id"
	echoerr "Started for user '$user', key '$key', did '$did'"
fi

port=$(docker port $did 8000)
port=${port##*:}

if curl -s http://$ip:$port/ | grep -q '<title>Codebox</title>'; then
	echoerr -e "Codebox ready at:\n\thttp://$ip:$port/?email=$user&token=$key"
	echo "{ \"user\": \"$user\", \"key\": \"$key\", \"did\": \"$did\", \"port\": \"$port\", \"status\": \"ok\" }"
else
	echoerr "Somehting wrong happened, cant't retrieve codebox homepage!"
	echo "{ \"user\": \"$user\", \"key\": \"$key\", \"status\": \"error\" }"
	exit 1
fi
