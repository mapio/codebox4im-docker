#!/bin/bash

user_key=$1

echoerr() {
	echo "$@" 1>&2
}

wait_codebox() {

	local did="$1"
	echoerr -en "Waiting for codebox startup"
	attempts=10
	while [[ $attempts > 0 ]] && ! docker logs "$did" | grep "Codebox is running" >/dev/null; do
		echoerr -n .
		sleep 1
		attempts=$(( $attempts - 1 ))
	done
	if [[ $attempts > 0 ]]; then
		echoerr ". started ($did)!"
	else
		echoerr " FAILED TO START!"
		exit 1
	fi

}


if [[ -z "$user_key" ]]; then
	echoerr "Missing user:key command line argument"
	exit 1
fi

if [[ -z "$ARBITER_ADDRESS" ]]; then
	echoerr "Please set ARBITER_ADDRESS in the environment"
	exit 1
fi

if [[ -z "$TSERVER_ADDRESS" ]]; then
	echoerr "Please set TSERVER_ADDRESS in the environment"
	exit 1
fi

user=${user_key%%:*}
key=${user_key##*:}

mkdir -p ./var/data
base_dir=$(realpath ./var/data)
user_dir="${base_dir}/${user}"

if [[ ! -d "$user_dir" ]]; then
	mkdir -p "${user_dir}/workspace"
fi

chown -R 1000:1000 "$user_dir"

docker_id="${user_dir}/docker_id.txt"
if [[ -r "$docker_id" ]]; then
	did=$(cat "$docker_id")
	echoerr -n "Found previous run id '$did'..."
	running=$(docker inspect -f '{{ .State.Running }}' $did 2>/dev/null)
	if [[ $running == "true" ]]; then
		echoerr " instance alive!"
	else
		echoerr " instance not running! Cleaning up id..."
		did=''
		rm -f "$docker_id"
	fi
else
	did=''
fi

if [[ -z "$did" ]]; then
	did=$(docker run --name "tm_worker_${user}" -d -P -e "TSERVER_ADDRESS=$TSERVER_ADDRESS" -v "${user_dir}/workspace":/home/esame/workspace mapio/tm-workers run --users "$user_key" /home/esame/workspace)
	wait_codebox $did
	echo $did > "$docker_id"
fi

port=$(docker port $did 8000)
port=${port##*:}

if curl -s http://$ARBITER_ADDRESS:$port/ | grep -q '<title>Codebox</title>'; then
	echoerr -e "Codebox ready at:\n\thttp://$ARBITER_ADDRESS:$port/?email=$user&token=$key"
	echo "{ \"user\": \"$user\", \"key\": \"$key\", \"did\": \"$did\", \"port\": \"$port\", \"status\": \"ok\" }"
else
	echoerr "Somehting wrong happened, cant't retrieve codebox homepage!"
	echo "{ \"user\": \"$user\", \"key\": \"$key\", \"status\": \"error\" }"
	exit 1
fi
